{
	"compilerOptions": {
		"module": "es6",
		"target": "es5",

		"moduleResolution": "node",
		"outDir": "./dist",
		"esModuleInterop": true,
		"baseUrl": ".",
		"jsx": "react-jsx",
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"declaration": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true
	},
	"include": ["src/**/*.ts", "tests/**/*.ts", "src/index.ts", "src/*.tsx"],
	"exclude": ["node_modules/*", "dist/*", ".vscode/*"]
}
