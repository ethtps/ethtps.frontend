{
  "compilerOptions": {
    "target": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "allowUmdGlobalAccess": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "preserveConstEnums": true,
    "incremental": true,
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "plugins": [
      {
        "name": "typescript-plugin-proactive-code-fixes"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/components/ErrorBoundary.jsx",
    "src/pages/providers/[slug]/page.js",
    "next.config.mjs",
    "src/pages/components/Layout",
    "src/components/partials/provider-page/overview/WithTooltip.jsx",
    "src/components/instant data animations/d3-stream/D3Stream.tsx",
    "src/pages/humanity-proof.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "merger",
    "src/ethtps.components/node_modules",
    "src/ethtps.data/node_modules",
  ]
}